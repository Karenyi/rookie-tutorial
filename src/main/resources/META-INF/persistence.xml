<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="jpa-pu" transaction-type="RESOURCE_LOCAL">
        <!-- 使用 Hibernate 作為 JPA 實作 -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.tutorial.model.DeptDO</class>
        <class>org.tutorial.model.EmpDO</class>

        <properties>
            <!-- database connection information -->
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver" />
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:32769:ORCLCDB" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value="123456" />

            <!-- SQL方言 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle12cDialect" />
            <!-- 是否要顯示實際操作資料庫時的SQL -->
            <property name="hibernate.show_sql" value="true" />
            <!-- 是否要格式化操作資料庫時的SQL -->
            <property name="hibernate.format_sql" value="true" />
            <!-- 依照 entity annotation 自動建立 schema, value: none, update, create, create-drop -->
            <!-- <property name="hibernate.hbm2ddl.auto" value="update" />-->

            <!-- 是否使用 SequenceStyleGenerator 產生主鍵 (hibernate 5 預設為 true) -->
            <!-- <property name="hibernate.id.new_generator_mappings" value="false" />-->
        </properties>
    </persistence-unit>
</persistence>
